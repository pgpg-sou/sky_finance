                span * 
            .col-md-8
                input#driver_licence.col-md-12.col-xs-12.apply.form-control[data-validation="required" required="true"  placeholder="Driver licence number"]

        .col-md-12.driver_information
            label.col-md-4.col-sm-12.col-xs-12.control-label 
