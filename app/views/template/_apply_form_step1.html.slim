                span * 
            .col-md-8
                input#driver_licence_version.col-md-12.col-xs-12.form-control.apply[data-validation="required" required="true" placeholder="Driver licence version"]

        .col-md-12.driver_information
            label.col-md-4.col-sm-12.col-xs-12.control-label 
                | Driver Licence Country
                span * 

            .col-md-8
                input#driver_licence_country.col-md-12.col-xs-12.apply[data-validation="required"  required="true" placeholder="Driver licence country"]

        .col-md-12.driver_information
            label.col-md-4.col-xs-12.control-label 
                | Driver Licence type
                span * 

            .col-md-8.col-xs-12 
                = render partial: 'template/select_tag_form', locals: {select_tag_data: ["Learners", "Restrictad", "International", "Full"], id_name: "driver_licence",is_other: false}


        .col-md-12.driver_information
            label.col-md-4.col-xs-12.control-label 
