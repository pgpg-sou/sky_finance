        .col-md-12.driver_information
            label.col-md-4.col-xs-12.control-label 
                | Citizen ship
                span * 
            .col-md-8
                input#citizen_ship.col-md-12.col-xs-12.apply.form-control.required[data-validation="required" required="true" placeholder="CITIZEN"]




        .col-md-12.driver_information
            label.col-md-4.col-xs-12.control-label 
                | Last Entry Date
                span * 

            .col-md-8
                input#last_entry_date.col-md-12.col-xs-12.apply.form-control.required.input-mask[data-validation="required" data-mask="99/99/9999" placeholder="dd/mm/yyyy" required="true"]
        .col-md-12.driver_information
            label.col-md-4.col-xs-12.control-label 
                | Visa Expire Date
                span * 

            .col-md-8
                input#visa_expire_date.col-md-12.col-xs-12.apply.form-control.required.input-mask[data-validation="required" data-mask="99/99/9999" placeholder="dd/mm/yyyy" required="true"]


